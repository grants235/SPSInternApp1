@model List<GbayWebApp.ViewModels.ListUsersViewModel>

@{
    ViewData["Title"] = "Manage Users";
}

<h1>Manage Users</h1>

<a class="btn btn-primary m-2" asp-controller="Administration" asp-action="CreateUser">
    Create User
</a>

<table class="table">
    <tr>
        <th>
            UserId
        </th>
        <th>
            Username
        </th>
        <th>
            Email
        </th>
        <th>
            Email Confirmed
        </th>
        <th>
            Roles
        </th>
        <th>
            Actions
        </th>
    </tr>
    @for (int i = 0; i < Model.Count; i++)
    {
        <tr>
            <td>
                @Model[i].Id
            </td>
            <td>
                @Model[i].Username
            </td>
            <td>
                @Model[i].Email
            </td>
            <td>
                @Model[i].EmailConfirmed
            </td>
            <td>
                @string.Join(", ", @Model[i].Roles)
            </td>
            <td>
                <a asp-route-id="@Model[i].Id" asp-controller="Administration" asp-action="EditUser">Edit </a>
                |
                <a asp-route-id="@Model[i].Id" asp-controller="Administration" asp-action="DeleteUser">Delete</a>
            </td>
        </tr>
    }

</table>