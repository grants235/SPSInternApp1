@model List<GbayWebApp.ViewModels.ListUsersViewModel>

@{
    ViewData["Title"] = "Manage Credits";
}

<h1>Manage Credits</h1>

<table class="table">
    <tr>
        <th>
            Id
        </th>
        <th>
            Username
        </th>
        <th>
            Credits
        </th>
        <th>
            Actions
        </th>
    </tr>
    @for (int i = 0; i < Model.Count; i++)
    {
        <tr>
            <td>
                @Model[i].Id
            </td>
            <td>
                @Model[i].Username
            </td>
            <td>
                @Model[i].Credits
            </td>
            <td>
                <a asp-route-id="@Model[i].Id" asp-controller="Administration" asp-action="EditCredits">Edit </a>
            </td>
        </tr>
    }

</table>