@model GbayWebApp.ViewModels.EditUserViewModel
@{
    ViewData["Title"] = "Edit User";
}

<h1>Edit User</h1>

<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <b><label asp-for="Username" class="col-form-label"></label></b>
                <input asp-for="Username" disabled class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <b><label asp-for="Email"></label></b>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <b><label>Password </label></b>
                <button class="btn btn-info" asp-controller="Administration" asp-action="ForgotPassword">Send link to reset password</button>
            </div>
            <div class="form-group">
                <b><label asp-for="SecQuestion1"></label></b>
                <input asp-for="SecQuestion1" class="form-control" />
                <span asp-validation-for="SecQuestion1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <b><label asp-for="SecQuestion2"></label></b>
                <input asp-for="SecQuestion2" class="form-control" />
                <span asp-validation-for="SecQuestion2" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

    </div>
</div>