@model GbayWebApp.ViewModels.ResetSecQuestionsViewModel
@{
    ViewData["Title"] = "Reset Security Questions";
}

<h1>Reset Security Questions</h1>

<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SecurityQuestion1"></label>
                <input asp-for="SecurityQuestion1" class="form-control" />
                <span asp-validation-for="SecurityQuestion1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SecurityQuestion2"></label>
                <input asp-for="SecurityQuestion2" class="form-control" />
                <span asp-validation-for="SecurityQuestion2" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Reset</button>
        </form>
    </div>
</div>